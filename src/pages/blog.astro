---
import Layout from '../layouts/Layout.astro';

const posts = await Astro.glob('./blog/posts/*.mdx');
---

<Layout>
	<main class="wrapper stack gap-8 lg:gap-20">
        <h1>Posts</h1>
        <ul>
            {posts.map(
                (post) =>
                    <li>
                        <a href={post.url}>
                            {post.frontmatter.title} ({(new Date(post.frontmatter.published)).toISOString().substring(0, 10)})
                        </a>
                    </li>
            )}
        </ul>
	</main>
</Layout>

<style>

li {
    font-size: 1.5rem;
}

</style>
