---
import Head from '../components/Head.astro'
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Head title={title} />
	</head>
	<body>
		<div class="stack">
			<Nav />
			<slot />
			<Footer />
		</div>
	</body>
</html>
